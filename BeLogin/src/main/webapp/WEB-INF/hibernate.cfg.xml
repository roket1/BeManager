<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Parametri connessione Database -->
		<!-- Cambiare con l'url con quello del computer10 -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/hibernate</property>
		<property name="connection.username">root</property>
		<property name="connection.password">admin</property>

		<!-- JDBC connection pool per il riuso delle connessioni -->
		<property name="connection.pool_size">1</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- In questo modo si abilita la gestione automatica della sessione di 
			hibernate -->
		<property name="current_session_context_class">thread</property>

		<!-- Non ho idea di cosa sia -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

		<!-- Ogni query eseguita da hibernate viene mostrata in Console (Hibernate 
			Query Result) -->
		<property name="show_sql">true</property>

		<!-- Drop and re-create the database schema on startup <property name="hbm2ddl.auto">create</property> -->

		<!-- Mappaggio delle classi -->
		<mapping class="" />

	</session-factory>

</hibernate-configuration>